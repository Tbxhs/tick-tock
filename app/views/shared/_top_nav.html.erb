        </a>
        <ul class="dropdown-menu">
          <li><%= link_to(t('devise.navigation.change_registration'),edit_user_registration_path) %></li>
          <li><%= link_to t('devise.navigation.sign_out'), destroy_user_session_path, :method => :delete %></li>
